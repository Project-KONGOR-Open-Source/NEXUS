<?xml version="1.0" encoding="utf-8"?>

<!-- https://learn.microsoft.com/en-us/visualstudio/test/configure-unit-tests-by-using-a-dot-runsettings-file -->

<RunSettings>

<![CDATA[
    this is a raw text block that allows the usage of "--", which breaks comment markup

    inside the IDE, this file is usually picked up automatically
    when running tests from the command line, however, it needs to be passed in manually

    examples:
        dotnet test {PROJECT} --settings .runsettings
        dotnet test {PROJECT}.csproj --settings .runsettings
        dotnet test {SOLUTION}.sln --settings .runsettings
        dotnet test {SOLUTION}.slnx --settings .runsettings
]]>

    <RunConfiguration>

        <TreatNoTestsAsError>true</TreatNoTestsAsError>

        <!-- additional unit test configuration goes here -->

        <EnvironmentVariables>

            <!-- environment variables for unit tests go here -->

        </EnvironmentVariables>

    </RunConfiguration>

</RunSettings>
