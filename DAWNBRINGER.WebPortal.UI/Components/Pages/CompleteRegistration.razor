@page "/register/{Token}"
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>Complete Registration</PageTitle>

<PageTitle>Complete Registration</PageTitle>

<div class="d-flex align-items-center justify-content-center min-vh-100 bg-dark text-white">
    <div class="card bg-secondary text-white shadow-lg" style="max-width: 500px; width: 100%;">
        <div class="card-body p-5">
            <h2 class="text-center mb-4 fw-bold">Finish Setting Up</h2>
            <p class="text-center text-light mb-4">Choose your username and password to create your account.</p>

            <EditForm Model="@Model" OnValidSubmit="HandleValidSubmit" FormName="CompleteRegistrationForm">
                <DataAnnotationsValidator />
                
                @if (!string.IsNullOrEmpty(Message))
                {
                    <div class="alert @(IsSuccess ? "alert-success" : "alert-danger") mb-3">
                         @((MarkupString)Message)
                    </div>
                }
                
                <div class="mb-3">
                    <label class="form-label text-uppercase small fw-bold text-muted">Registration Token</label>
                    <InputText class="form-control bg-dark text-white border-0" @bind-Value="Model.RegistrationToken" readonly disabled />
                </div>

                <div class="mb-3">
                    <label for="name" class="form-label fw-bold">Hero Name (Username)</label>
                    <InputText id="name" class="form-control form-control-lg" @bind-Value="Model.Name" placeholder="Enter your display name" />
                    <ValidationMessage For="@(() => Model.Name)" class="text-danger small mt-1" />
                    <small class="text-light opacity-75">This will be your in-game display name.</small>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label fw-bold">Password</label>
                    <InputText id="password" type="password" class="form-control form-control-lg" @bind-Value="Model.Password" placeholder="••••••••" />
                    <ValidationMessage For="@(() => Model.Password)" class="text-danger small mt-1" />
                </div>

                <div class="mb-4">
                    <label for="confirmPassword" class="form-label fw-bold">Confirm Password</label>
                    <InputText id="confirmPassword" type="password" class="form-control form-control-lg" @bind-Value="Model.ConfirmPassword" placeholder="••••••••" />
                    <ValidationMessage For="@(() => Model.ConfirmPassword)" class="text-danger small mt-1" />
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg fw-bold" disabled="@IsSubmitting">
                        @if (IsSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span>Creating Account...</span>
                        }
                        else
                        {
                            <span>Create Account</span>
                        }
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Token { get; set; } = string.Empty;

    [SupplyParameterFromForm]
#pragma warning disable BL0008
    private RegisterUserWithDiscordDTO Model { get; set; } = new();
#pragma warning restore BL0008

    private string? Message;
    private bool IsSuccess;
    private bool IsSubmitting;

    protected override void OnInitialized()
    {
        if (string.IsNullOrEmpty(Model.RegistrationToken))
        {
            Model.RegistrationToken = Token;
        }
    }

    private async Task HandleValidSubmit()
    {
        IsSubmitting = true;
        Message = null;

        try
        {
            var response = await Http.PostAsJsonAsync("User/RegisterWithDiscord", Model);
            
            if (response.IsSuccessStatusCode)
            {
                var tokenDto = await response.Content.ReadFromJsonAsync<global::DAWNBRINGER.WebPortal.UI.DTOs.GetAuthenticationTokenDTO>();
                if (tokenDto != null)
                {
                    Navigation.NavigateTo($"/login-callback?token={tokenDto.Token}&userid={tokenDto.UserID}");
                }
                else
                {
                     IsSuccess = true;
                     Message = "Account created, but failed to retrieve login token. Please try logging in manually.";
                }
            }
            else
            {
                var content = await response.Content.ReadAsStringAsync();
                IsSuccess = false;

                try 
                {
                    // Try to parse as array of strings (validation errors)
                    var errors = await response.Content.ReadFromJsonAsync<string[]>();
                    if (errors != null && errors.Length > 0)
                    {
                        // Start HTML list
                        Message = "<ul>" + string.Join("", errors.Select(e => $"<li>{e}</li>")) + "</ul>"; 
                    }
                    else 
                    {
                         // Fallback to raw content if not an array or empty
                         Message = !string.IsNullOrWhiteSpace(content) ? content : "Registration failed.";
                    }
                }
                catch
                {
                    // Fallback if parsing fails (e.g. simple string error)
                    Message = !string.IsNullOrWhiteSpace(content) ? content : "Registration failed.";
                }
            }
        }
        catch (NavigationException)
        {
            throw;
        }
        catch (Exception ex)
        {
            IsSuccess = false;
            Message = $"An error occurred: {ex.Message}";
        }
        finally
        {
            IsSubmitting = false;
        }
    }
}

