@page "/register/{Token}"
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>Complete Registration</PageTitle>

<h1>Complete Registration</h1>

<p>Choose your username and password to complete your account creation.</p>

<EditForm Model="@Model" OnValidSubmit="HandleValidSubmit" FormName="CompleteRegistrationForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Registration Token</label>
        <InputText class="form-control" @bind-Value="Model.RegistrationToken" readonly disabled />
    </div>

    <div class="mb-3">
        <label for="name" class="form-label">Username</label>
        <InputText id="name" class="form-control" @bind-Value="Model.Name" />
        <ValidationMessage For="@(() => Model.Name)" />
        <small class="text-muted">This will be your in-game display name.</small>
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <InputText id="password" type="password" class="form-control" @bind-Value="Model.Password" />
        <ValidationMessage For="@(() => Model.Password)" />
    </div>

    <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirm Password</label>
        <InputText id="confirmPassword" type="password" class="form-control" @bind-Value="Model.ConfirmPassword" />
        <ValidationMessage For="@(() => Model.ConfirmPassword)" />
    </div>

    <button type="submit" class="btn btn-primary" disabled="@IsSubmitting">Create Account</button>
</EditForm>

@if (!string.IsNullOrEmpty(Message))
{
    <div class="alert @(IsSuccess ? "alert-success" : "alert-danger") mt-3">
        @Message
    </div>
}

@code {
    [Parameter]
    public string Token { get; set; } = string.Empty;

    [SupplyParameterFromForm]
    private RegisterUserWithDiscordDTO Model { get; set; } = new();

    private string? Message;
    private bool IsSuccess;
    private bool IsSubmitting;

    protected override void OnInitialized()
    {
        if (string.IsNullOrEmpty(Model.RegistrationToken))
        {
            Model.RegistrationToken = Token;
        }
    }

    private async Task HandleValidSubmit()
    {
        IsSubmitting = true;
        Message = null;

        try
        {
            var response = await Http.PostAsJsonAsync("User/RegisterWithDiscord", Model);
            
            if (response.IsSuccessStatusCode)
            {
                var tokenDto = await response.Content.ReadFromJsonAsync<global::DAWNBRINGER.WebPortal.UI.DTOs.GetAuthenticationTokenDTO>();
                if (tokenDto != null)
                {
                    Navigation.NavigateTo($"/login-callback?token={tokenDto.Token}&userid={tokenDto.UserID}");
                }
                else
                {
                     IsSuccess = true;
                     Message = "Account created, but failed to retrieve login token. Please try logging in manually.";
                }
            }
            else
            {
                var content = await response.Content.ReadAsStringAsync();
                IsSuccess = false;
                Message = $"Error: {content}";
            }
        }
        catch (Exception ex)
        {
            IsSuccess = false;
            Message = $"An error occurred: {ex.Message}";
        }
        finally
        {
            IsSubmitting = false;
        }
    }
}

